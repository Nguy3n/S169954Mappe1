<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:layout_gravity="bottom"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/vunnet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingRight="20dp"/>

        <TextView
            android:id="@+id/tapt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingRight="20dp"/>


        <TextView
            android:id="@+id/gjettet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </LinearLayout>
    <!-- Hangman bilde -->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/galgen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/galgen"
            android:background="@color/white"
            android:src="@drawable/galgen"/>

        <ImageView
            android:id="@+id/hode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/hode"
            android:src="@drawable/hode"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/kroppen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/kroppen"
            android:src="@drawable/kroppen"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/arm1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/arm1"
            android:src="@drawable/arm1"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/arm2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/arm2"
            android:src="@drawable/arm2"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/bein1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/bein1"
            android:src="@drawable/bein1"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/bein2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/bein2"
            android:src="@drawable/bein2"
            android:visibility="invisible" />

    </RelativeLayout>

    <!-- Her står ordet man skal gjette på -->
    <LinearLayout
        android:id="@+id/ordet"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="3dp"
        android:background="@color/black"
        android:layout_gravity="center"
        android:orientation="horizontal">


    </LinearLayout>

    <!--<ImageView
        android:layout_width="wrap_content"
