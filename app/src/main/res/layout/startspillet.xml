<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_gravity="bottom"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hangman-spill"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image"/>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:text="Q"/>

        <Button
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:text="W"/>

        <Button
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:text="E"/>

        <Button
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:text="R"/>

        <Button
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:text="T"/>

        <Button
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:text="Y"/>

        <Button
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:text="U"/>

        <Button
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:text="I"/>

        <Button
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:text="O"/>

        <Button
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:text="P"/>

        <Button
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:text="Å"/>

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:text="A"/>

        <Button
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:text="S"/>

        <Button
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:text="D"/>

        <Button
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:text="F"/>

        <Button
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:text="G"/>

        <Button
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:text="H"/>

        <Button
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:text="J"/>

        <Button
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:text="K"/>

        <Button
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:text="L"/>

        <Button
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:text="Ø"/>

        <Button
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:text="Æ"/>

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:text="Z"/>

        <Button
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:text="X"
            android:layout_weight="1" />

        <Button
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:text="C"
            android:layout_weight="1" />

        <Button
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:text="V"
            android:layout_weight="1" />

        <Button
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:text="B"
            android:layout_weight="1" />

        <Button
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:text="N"
            android:layout_weight="1" />

        <Button
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:text="M"
            android:layout_weight="1" />
    </TableRow>
</LinearLayout>
